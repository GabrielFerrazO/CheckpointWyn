// prisma/schema.prisma

datasource db {
  provider = "sqlite" // ğŸ” lembre-se: vocÃª estÃ¡ usando SQLite agora
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now()) // âœ… campo adicionado aqui
}

enum Role {
  CLIENT
  PROVIDER
}
